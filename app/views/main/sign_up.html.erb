<style type="text/css">
#background_img{
	display: block;
}

#content{ background-color: transparent; }

#top_bar{
  opacity: .9;
}

#menu_widget{
  opacity: .9;
}



</style>

<div id="sign_up">
<h2><%= @group_name %> Registration</h2>


<div id="sign_up_form">
	
	<div class="sign_up_form_left">
		First Name:<br> 
		<input class="full_width required sign_up_element" type="text" id="first_name">
	</div> 
	<div class="sign_up_form_right">
		Last Name: <br>
		<input class="full_width required sign_up_element" type="text" id="last_name"> 
	</div>
	<div class="clear_div"></div>
	<div class="sign_up_form_left">
		Birthday: <br>
		<%= date_select('birth_date', '', {:start_year => 1910, :end_year => Date.current.year, order: [:month, :day, :year]}, {:class => ' required sign_up_element'}) %>
	</div>
	<% if @group_variable == 'teen' || @group_variable == 'youth' %>
	<div class="sign_up_form_left">
		Grade (in Fall):<br> 
		<select  id="grade" class="required sign_up_element">
			<option disabled="disabled" selected="selected">Select Your Grade</option>
				<% @grades.each do |grade| %>
					<option value="<%= grade %>"><%= grade %></option>
				<% end %>	
		</select>
	</div>
	<% end %>	
	<div class="clear_div"></div>


	<% if @group_variable == 'teen' || @group_variable == 'youth' %>
	<div class="sign_up_form_right">
		School: <br>
		<select  id="school" class="required sign_up_element">
			<option disabled="disabled" selected="selected">Select Your School</option>
				<% @schools.each do |school| %>
					<option value="<%= school %>"><%= school %></option>
				<% end %>	
		</select>
	</div>
	<% end %>
	<div class="clear_div"></div>
	<div class="sign_up_form_left">
		Home Zip Code:<br> 
		<input class="half_width required sign_up_element" type="number" id="zip_code">
	</div>
	<div class="sign_up_form_left">
		Home Library: <br> 
		<select  id="home_library" class="required sign_up_element">
			<option disabled="disabled" selected="selected">Select a Location</option>
			<% @libraries.each do |library| %>
  				<option value="<%= library %>"><%= library %></option>
  			<% end %>
		</select>
	</div>
	<div class="clear_div"></div>
	<div class="sign_up_form_left">
		Email (optional):<br>
	 	<input class="full_width sign_up_element" type="email" id="email">
	</div>
	<div class="sign_up_form_left">
		Library Card # (optional):<br>
		<input class="full_width sign_up_element" type="number" id="library_card">
	</div>
	<div class="clear_div"></div>
</div>
<div class="center"> 
<a class="register_button" onclick="register('<%= @group_variable %>')">Register</a>
</div>
<div id="messages">
</div>
</div>