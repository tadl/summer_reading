<script>
jQuery(function(){

$('input[name="club"][value="<%= @club_filter %>"]').attr('checked', 'checked');
$('input[name="library"][value="<%= @location_filter %>"]').attr('checked', 'checked');

<% if @winner == 'yes' %>
  $('#winner').attr('checked', 'checked');
<% else %>
  $('#winner').attr('checked', false);
<% end %>  

})

</script>

