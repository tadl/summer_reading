

<% if @participants.count(:all) != 0  %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Library card</th>
      <th>Email</th>
      <th>Zip code</th>
      <th>Home library</th>
      <th>School</th>
      <th>Grade</th>
      <th>Age</th>
      <th>Club</th>
      <th>Experiences</th>
      <th>Experience Count</th>
      <th>Award New Experience</th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.id %></td>
        <td><%= participant.first_name %></td>
        <td><%= participant.last_name %></td>
        <td><%= participant.library_card %></td>
        <td><%= participant.email %></td>
        <td><%= participant.zip_code %></td>
        <td><%= participant.home_library %></td>
        <td><%= participant.school %></td>
        <td><%= participant.grade %></td>
        <td><%= participant.age %></td>
        <td><%= participant.club %></td>
        <td>
          <% participant.awards.each do |a| %>
             <%= a.experience.name %>    
          <% end %>
        </td>
        <td>
        <%= participant.awards.count %>
        </td>
        <td>
        <select id="award_form_<%= participant.id %>">
            <option value="">Select Experience</option>
          <% participant.unearned_experiences.each do |e| %>
            <option value="<%= e.id %>"><%= e.name %></option>            
          <% end %>
        </select>
        <a onclick="award_experience('<%= participant.id %>')">Award</a>
        </td> 

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%else%>
  <p> No patrons found </p>
 <% end %> 


