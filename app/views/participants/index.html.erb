<h1>Listing participants</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Library card</th>
      <th>Email</th>
      <th>Zip code</th>
      <th>Home library</th>
      <th>School</th>
      <th>Grade</th>
      <th>Age</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.first_name %></td>
        <td><%= participant.middle_name %></td>
        <td><%= participant.last_name %></td>
        <td><%= participant.library_card %></td>
        <td><%= participant.email %></td>
        <td><%= participant.zip_code %></td>
        <td><%= participant.home_library %></td>
        <td><%= participant.school %></td>
        <td><%= participant.grade %></td>
        <td><%= participant.age %></td>
        <td><%= participant.club %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Participant', new_participant_path %>
